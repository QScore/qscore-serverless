{
    "compilerOptions": {
        "lib": [
            "es2019"
        ],
        "removeComments": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "allowSyntheticDefaultImports": true,
        "noUnusedParameters": false,
        "sourceMap": true,
        "target": "es2019",
        "outDir": "lib",
        "module": "commonjs",
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".webpack/**/*",
        "_warmup/**/*",
        ".vscode/**/*"
    ]
}